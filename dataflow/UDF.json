{
	"name": "UDF",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "surrogate_source",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          name as string,",
				"          gender as string,",
				"          country as string,",
				"          department as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 derive(department = iif(department == 'HR', toInteger(1),\r",
				"    iif(department == 'Finance', toInteger(2),\r",
				"        iif(department == 'BI', toInteger(3), toInteger(-1))\r",
				"    )\r",
				")\r",
				") ~> derivedColumn1"
			]
		}
	}
}