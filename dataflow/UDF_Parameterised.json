{
	"name": "UDF_Parameterised",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "surrogate_source",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"udfLibraries": [
				{
					"referenceName": "UDF1",
					"type": "DataFlowReference"
				}
			],
			"scriptLines": [
				"source(output(",
				"          name as string,",
				"          gender as string,",
				"          country as string,",
				"          department as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 derive(department = department_UDF(department)) ~> derivedColumn1"
			]
		}
	}
}