{
	"name": "schema_error",
	"properties": {
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "bad_records",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [],
			"transformations": [
				{
					"name": "derivedColumn1"
				},
				{
					"name": "split1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          CustomerID as string,",
				"          Name as string,",
				"          City as string,",
				"          Country as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 derive(Name_len = length(toString(Name)),",
				"          City_len = length(toString(City)),",
				"          Country_len = length(toString(Country))) ~> derivedColumn1",
				"derivedColumn1 split(toInteger(Name_len) <= 20,",
				"     disjoint: false) ~> split1@(valid, invalid)"
			]
		}
	}
}